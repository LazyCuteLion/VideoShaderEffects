<Window x:Class="VideoShaderEffects.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:VideoShaderEffects"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="1280"
        Height="760"
        mc:Ignorable="d">
    <Grid Background="Green">
        <MediaElement x:Name="player"
                      LoadedBehavior="Manual"
                      MediaOpened="player_MediaOpened"
                      RenderTransformOrigin="0,0"
                      SizeChanged="player_SizeChanged" />
        <Grid Height="32" VerticalAlignment="Bottom" Background="#1D000000">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Margin="10,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <RadioButton Checked="RadioButton_Checked" Content="VR" Foreground="White" />
                <RadioButton Margin="20,0"
                             Checked="RadioButton_Checked"
                             Content="Tile"
                             Foreground="White" />
                <RadioButton Checked="RadioButton_Checked" Content="Alpha" Foreground="White" />
            </StackPanel>
            <StackPanel Name="Panel_VR"
                        Grid.Column="1"
                        Margin="10,0"
                        VerticalAlignment="Center"
                        DataContext="{Binding ElementName=player, Path=Effect}"
                        Orientation="Horizontal"
                        Visibility="Collapsed">
                <TextBlock VerticalAlignment="Center" Foreground="White" Text="Zoom：" />
                <Slider Width="100"
                        VerticalAlignment="Center"
                        LargeChange="0.001"
                        Maximum="1"
                        Minimum="0"
                        SmallChange="0.000001"
                        ToolTip="{Binding Zoom, StringFormat={}{0:F4}}"
                        Value="{Binding Zoom}" />
                <TextBlock Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="Fov：" />
                <Slider Width="100"
                        VerticalAlignment="Center"
                        Maximum="180"
                        Minimum="0"
                        ToolTip="{Binding Fov, StringFormat={}{0:F4}}"
                        Value="{Binding Fov}" />
            </StackPanel>
            <StackPanel Name="Panel_Tile"
                        Grid.Column="1"
                        Margin="10,0"
                        VerticalAlignment="Center"
                        DataContext="{Binding ElementName=player, Path=Effect}"
                        Orientation="Horizontal"
                        Visibility="Collapsed">
                <TextBlock VerticalAlignment="Center" Foreground="White" Text="Columns：" />
                <Slider Width="100"
                        IsSnapToTickEnabled="True"
                        Maximum="4"
                        Minimum="1"
                        TickPlacement="Both"
                        Value="{Binding Columns}" />
                <TextBlock Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="Rows：" />
                <Slider Width="100"
                        IsSnapToTickEnabled="True"
                        Maximum="4"
                        Minimum="1"
                        TickPlacement="Both"
                        Value="{Binding Rows}" />
                <TextBlock Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="Spacing：" />
                <Slider Width="100"
                        VerticalAlignment="Center"
                        LargeChange="10"
                        Maximum="100"
                        Minimum="0"
                        SmallChange="1"
                        Value="{Binding Spacing}" />
                <TextBlock Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="Spacing Color：" />
                <ComboBox Width="140"
                          VerticalAlignment="Center"
                          Loaded="ComboBox_Loaded"
                          SelectedItem="{Binding SpacingColor}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Rectangle Width="16" Height="16">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="{Binding}" />
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock Margin="8,0" VerticalAlignment="Center" Text="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
            <StackPanel Name="Panel_Alpha"
                        Grid.Column="1"
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Visibility="Collapsed">
                <TextBlock VerticalAlignment="Center" Foreground="White" Text="Alpha Position：" />
                <RadioButton Checked="RadioButton_Checked" Content="Left" Foreground="White" />
                <RadioButton Margin="10,0"
                             Checked="RadioButton_Checked"
                             Content="Top"
                             Foreground="White" />
                <RadioButton Checked="RadioButton_Checked"
                             Content="Right"
                             Foreground="White"
                             IsChecked="True" />
                <RadioButton Margin="10,0"
                             Checked="RadioButton_Checked"
                             Content="Bottom"
                             Foreground="White" />
            </StackPanel>
            <Button Grid.Column="2"
                    Margin="10,0"
                    Padding="8,4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="Button_Click"
                    Content="Open" />
        </Grid>
    </Grid>
</Window>
